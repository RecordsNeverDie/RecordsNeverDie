<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>Editando {{name}}</h2>
        
        <form action="/places/edit/{{_id}}" method="POST">
            <div class="form-group">
                <label for="field1">Nombre</label>
                <input name="name" type="text" class="form-control" id="field1" value="{{name}}">
            </div>
            <div class="form-group">
                <label for="field2">Género</label>
                <input name="genre" type="text" class="form-control" id="field2" value="{{genre}}">
            </div>
            <div class="form-group">
                <label for="field3">Rating</label>
                <input name="rating" type="text" class="form-control" id="field3" value="{{rating}}">
            </div>
            <div class="form-group">
                <label for="field4">Descripción</label>
                <input name="description" type="text" class="form-control" id="field4" value="{{description}}">
            </div>
            <div class="form-group">
                <label for="field5">Dirección</label>
                <input name="latitude" type="text" class="form-control" id="field5" placeholder="latitude" value="{{location.coordinates.[0]}}">
                <input name="longitude" type="text" class="form-control" id="field5" placeholder="longitude" value="{{location.coordinates.[1]}}">
            </div>

            <button type="submit" class="btn btn-info btn-lg btn-block">Guardar cambios</button>
        </form>
            <a href="/places"><button type="button" class="btn btn-info btn-back-list">Volver a lugares</button></a>
    </div>
</div>
