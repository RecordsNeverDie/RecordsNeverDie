<div class="row justify-content-center">
    <div class="col-md-6">

        <h2>Añade una nueva tienda</h2>

        <form action="/places/new" method="POST">
            <div class="form-group">
                <label for="field1">Nombre</label>
                <input name="name" type="text" class="form-control" id="field1">
            </div>
            <div class="form-group">
                <label for="field2">Género</label>
                <input name="genre" type="text" class="form-control" id="field2">
            </div>
            <div class="form-group">
                <label for="field3">Rating</label>
                <input name="rating" type="text" class="form-control" id="field3">
            </div>
            <div class="form-group">
                <label for="field4">Descripción</label>
                <input name="description" type="text" class="form-control" id="field4">
            </div>
            <div class="form-group">
                <label for="field5">Dirección</label>
                <input name="latitude" type="text" class="form-control" id="field5" placeholder="latitude">
                <input name="longitude" type="text" class="form-control" id="field5" placeholder="longitude">
            </div>

            <button type="submit" class="btn btn-info btn-lg btn-block">Crear</button>
        </form>
    </div>
</div>
