<div class="row justify-content-center signup">
    <div class="col-md-6">

        <h1 class="title-view">Registro</h1>

        <form action="/signup" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="field5">Nombre</label>
                <input name="name" type="text" class="form-control" id="field5">
            </div>
            <div class="form-group">
                <label for="field1">Nombre de usuario</label>
                <input name="username" type="text" class="form-control" id="field1">
            </div>
            <div class="form-group">
                <label for="field2">Correo electrónico</label>
                <input name="email" type="email" class="form-control" id="field2">
            </div>

            <div class="form-group">
                <label for="field3">Contraseña</label>
                <input name="password" type="password" class="form-control" id="field3">
            </div>

            <div class="form-group">
                <label for="field4">Foto de perfil</label>
                <input name="imageFile" type="file" class="form-control inputfile" id="field4">
            </div>

            <button type="submit" class="btn btn-signup btn-light btn-block btn-lg">Registrarme</button>

            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}
        </form>

        <p>¿Tienes cuenta? <a href="/login">¡Inicia sesión!</a></p>
    </div>
</div>